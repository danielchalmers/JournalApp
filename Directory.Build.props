<Project>

  <!-- Build -->
  <PropertyGroup>
    <LangVersion>latest</LangVersion>
    <Deterministic>true</Deterministic>

    <!-- https://github.com/dotnet/aspnetcore/issues/48829#issuecomment-1607597833 -->
    <AndroidEnableMarshalMethods>false</AndroidEnableMarshalMethods>

    <!-- https://github.com/dotnet/maui/issues/17330#issuecomment-1716418161 -->
    <UseRidGraph>true</UseRidGraph>

    <NoWarn>BL0007</NoWarn>
  </PropertyGroup>

  <!-- Platform -->
  <PropertyGroup>
    <SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'android'">24</SupportedOSPlatformVersion>
    <SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.19041.0</SupportedOSPlatformVersion>
    <TargetPlatformMinVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.19041.0</TargetPlatformMinVersion>
  </PropertyGroup>

</Project>