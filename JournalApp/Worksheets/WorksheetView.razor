@namespace JournalApp.Worksheets

<div class="worksheet-view">
	<MudButton OnClick="OnResourceClick" StartIcon="@Icons.Material.Outlined.Link" Color="Color.Primary" Disabled="@IsLinkDisabled">
		<MudText Typo="Typo.h5">@Worksheet.Title</MudText>
	</MudButton>

	@if (!string.IsNullOrEmpty(Worksheet.Description))
	{
		<MudText Typo="Typo.body1">@Worksheet.Description</MudText>
	}

	@if (!string.IsNullOrEmpty(Worksheet.SourceUri))
	{
		<MudLink Href="@Worksheet.SourceUri" Typo="Typo.caption" Color="Color.Default" Style="word-wrap: anywhere">@Worksheet.SourceUri</MudLink>
	}
</div>

@code {
	[Parameter]
	public Worksheet Worksheet { get; set; }

	public bool IsLinkDisabled => string.IsNullOrWhiteSpace(Worksheet.Uri);

	async Task OnResourceClick()
	{
		await Browser.Default.OpenAsync(Worksheet.Uri);
	}
}
