@namespace JournalApp
@inherits MudComponentBase
@inject IClipboard Clipboard

<MudLink OnClick="OnClick" Underline="Underline.None" Color="Color.Inherit"
         aria-label="Copy text to clipboard">@Text</MudLink>

@code {
    [Parameter]
    public string Text { get; set; }

    public void OnClick()
    {
        Clipboard.SetTextAsync(Text);
    }
}
